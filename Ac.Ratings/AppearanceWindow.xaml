<helpers:ModernWindowBase
    x:Class="Ac.Ratings.AppearanceWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ac.Ratings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theme="clr-namespace:Ac.Ratings.Theme"
    xmlns:converters="clr-namespace:Ac.Ratings.Theme.Converters"
    xmlns:helpers="clr-namespace:Ac.Ratings.Theme.ModernUI.Helpers"
    Title="Appearance Settings"
    Width="800"
    Height="450"
    Style="{StaticResource ModernWindow}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </Window.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel
                x:Name="Panel"
                MinWidth="150"
                Margin="16">
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="APPEARANCE" />

                <ListBox
                    Margin="0,0,0,16"
                    ItemsSource="{Binding AccentColors}"
                    SelectedItem="{Binding SelectedAccentColor, Mode=TwoWay}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel MaxWidth="{Binding ActualWidth, ElementName=Panel}" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Rectangle
                                Width="40"
                                Height="40"
                                Margin="2"
                                Fill="{Binding Converter={StaticResource ColorToBrushConverter}}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition MinWidth="120" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,16,4"
                        VerticalAlignment="Center"
                        Text="Theme:" />
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,0,4"
                        VerticalAlignment="Center"
                        DisplayMemberPath="DisplayName"
                        ItemsSource="{Binding Themes}"
                        SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</helpers:ModernWindowBase>
