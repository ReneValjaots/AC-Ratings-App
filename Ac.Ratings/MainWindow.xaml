<Window x:Class="Ac.Ratings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ac.Ratings"
        mc:Ignorable="d"
        Title="Ratings App" Height="600" Width="900">

    <Border Background="#272537"
            CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox Name="SearchBox"
                     Grid.Row="0" 
                     Grid.Column="0"
                     Width="150"
                     Height="30"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     TextChanged="SearchBox_TextChanged"/>
            <!--Style="{StaticResource ModernTextBox}"-->
            <!--TextChanged="SearchBox_TextChanged"/>-->

            <Button x:Name="MenuButton" 
                    Grid.Column="0"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Height="30"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Width="30"
                    Click="MenuButton_OnClick">
                <Image Source="/Hamburger_icon.png"/>
            </Button>

            <ListView x:Name="CarList" 
                      SelectionChanged="CarList_SelectionChanged"
                      Grid.Column="0"
                      Grid.Row="1"
                      Background="Transparent"
                      Foreground="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" Width="200" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="1"
                        Grid.Column="1">
                <TextBlock x:Name="Name" 
                           Height="25"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"/>

                <Image x:Name="CarImage" 
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                </Image>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="PowerFigures" 
                               Grid.Row="0"
                               Grid.Column="0"
                               Text="{Binding Power, StringFormat='{}{0} kW'}"
                               Foreground="White"/>

                    <TextBlock x:Name="TorqueFigures" 
                               Grid.Row="0"
                               Grid.Column="1"
                               Text="{Binding Torque, StringFormat='{}{0} kW'}"
                               Foreground="White"/>

                    <TextBlock x:Name="AccelerationFigures" 
                               Grid.Row="0"
                               Grid.Column="2"
                               Text="{Binding Acceleration, StringFormat='{}{0} kW'}"
                               Foreground="White"/>

                    <TextBlock x:Name="TopSpeedFigures" 
                               Grid.Row="0"
                               Grid.Column="3"
                               Text="{Binding TopSpeed, StringFormat='{}{0} kW'}"
                               Foreground="White"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Grid.Column="0">
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource ModernTextBlock}" 
                                   TargetType="{x:Type TextBlock}"/>
                        </StackPanel.Resources>
                        <TextBlock Text="Brand:"/>
                        <TextBlock Text="Power:"/>
                        <TextBlock Text="Torque"/>
                        <TextBlock Text="Weight:"/>
                        <TextBlock Text="Top Speed:"/>
                        <TextBlock Text="Acceleration:"/>
                        <TextBlock Text="Power-to-weight ratio:"/>
                    </StackPanel>

                    <StackPanel VerticalAlignment="Bottom"
                                HorizontalAlignment="Left"
                                Grid.Column="1">
                        <StackPanel.Resources>
                            <Style BasedOn="{StaticResource InputTextBox}" 
                                   TargetType="{x:Type TextBox}"/>
                        </StackPanel.Resources>
                        <TextBox x:Name="Brand"/>
                        <TextBox x:Name="Power"/>
                        <TextBox x:Name="Torque"/>
                        <TextBox x:Name="Weight"/>
                        <TextBox x:Name="Topspeed"/>
                        <TextBox x:Name="Acceleration"/>
                        <TextBox x:Name="Pwratio"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2" 
                        VerticalAlignment="Top" Margin="10">

                <TextBlock Text="{Binding ElementName=HandlingSlider, 
                    Path=Value, 
                    StringFormat='Handling: {0}'}" 
                           Foreground="White"/>

                <Slider x:Name="HandlingSlider" 
                        Minimum="0" Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock Text="{Binding ElementName=PhysicsSlider, 
                    Path=Value, 
                    StringFormat='Physics: {0}'}"  
                           Foreground="White" 
                           Margin="0,10,0,0"/>

                <Slider x:Name="PhysicsSlider" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock Text="{Binding ElementName=RealismSlider, 
                    Path=Value, 
                    StringFormat='Realism: {0}'}" 
                           Foreground="White" 
                           Margin="0,10,0,0"/>

                <Slider x:Name="RealismSlider" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock Text="{Binding ElementName=SoundSlider, 
                    Path=Value, 
                    StringFormat='Sound: {0}'}" 
                           Foreground="White" 
                           Margin="0,10,0,0"/>

                <Slider x:Name="SoundSlider" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock Text="{Binding ElementName=VisualsSlider, 
                    Path=Value, 
                    StringFormat='Visuals: {0}'}"  
                           Foreground="White" 
                           Margin="0,10,0,0"/>

                <Slider x:Name="VisualsSlider" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock Text="{Binding ElementName=FunFactorSlider, 
                    Path=Value, 
                    StringFormat='Fun Factor: {0}'}" 
                           Foreground="White" 
                           Margin="0,10,0,0"/>

                <Slider x:Name="FunFactorSlider" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock Text="{Binding ElementName=ExtraFeaturesSlider, 
                    Path=Value, 
                    StringFormat='Extra Features: {0}'}"  
                           Foreground="White" 
                           Margin="0,10,0,0"/>

                <Slider x:Name="ExtraFeaturesSlider" 
                        Minimum="0" 
                        Maximum="10" 
                        TickFrequency="0.5" 
                        IsSnapToTickEnabled="True" 
                        Width="150"
                        ValueChanged="Slider_ValueChanged"/>

                <TextBlock x:Name="AverageRating"
                           Foreground="White"
                           Margin="0,10,0,0"/>

                <Button x:Name="SaveButton" 
                        Content="Save Ratings" 
                        Click="SaveButton_Click"
                        Margin="0,15,0,0"/>

                <Button x:Name="ClearButton" 
                        Content="Clear Ratings" 
                        Click="ClearButton_Click"
                        Margin="0,15,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
