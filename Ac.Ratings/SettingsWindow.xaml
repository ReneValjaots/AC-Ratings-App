<Window x:Class="Ac.Ratings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ac.Ratings"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Border Background="Black" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

                <!-- Reset Ratings -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <TextBlock Text="Reset Ratings" Foreground="White" FontSize="16" VerticalAlignment="Center" />
                    <Button x:Name="ResetRatingsButton" Content="Reset" Width="100" Margin="10,0,0,0"
                            Click="ResetRatingsButton_Click" />
                </StackPanel>

                <!-- AC Root Folder -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <TextBlock Text="AC Root Folder" Foreground="White" FontSize="16" VerticalAlignment="Center" />
                    <Button x:Name="SetRootFolderButton" Content="Set Folder" Width="100" Margin="10,0,0,0" Click="SetRootFolderButton_OnClick"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</Window>
