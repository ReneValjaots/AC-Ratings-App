<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Slider.xaml" />
        <ResourceDictionary Source="Button.xaml" />
        <ResourceDictionary Source="TextBlock.xaml" />
        <ResourceDictionary Source="TextBox.xaml" />
        <ResourceDictionary Source="ComboBox.xaml" />
        <ResourceDictionary Source="RadioButton.xaml" />
        <ResourceDictionary Source="CheckBox.xaml" />
        <ResourceDictionary Source="ListBox.xaml" />
        <ResourceDictionary Source="/Theme/PrimaryTextBlock.xaml" />
        <ResourceDictionary Source="/Theme/Sliders/PrimarySlider.xaml" />
        <ResourceDictionary Source="/Theme/PrimaryCheckbox.xaml" />
        <ResourceDictionary Source="/Theme/Buttons/PrimaryButton.xaml" />
        <ResourceDictionary Source="/Theme/Buttons/SecondaryButton.xaml" />
        <ResourceDictionary Source="/Theme/Buttons/TertiaryButton.xaml" />
        <ResourceDictionary Source="/Theme/PrimaryListView.xaml" />
        <ResourceDictionary Source="/Theme/PrimaryTextBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  default accent colors and brushes  -->
    <Color x:Key="AccentColor">#1ba1e2</Color>
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource AccentColor}" />
</ResourceDictionary>