<UserControl x:Class="Ac.Ratings.Theme.ModernUI.test.Pages.General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ac.Ratings.Theme.ModernUI.test.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <Grid Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16" Text="Reset all ratings" />
            <Button x:Name="ResetRatingsButton" Grid.Column="1" Width="100" Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    Click="ResetRatingsButton_Click" Content="Reset"/>
        </Grid>

        <Grid Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16" Text="Reset all extra features" />
            <Button x:Name="ResetExtraFeatures" Grid.Column="1" Width="100" Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    Click="ResetExtraFeatures_Click" Content="Reset"/>
        </Grid>

        <Grid Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16" Text="Transfer ratings" />
            <Button x:Name="TransferRatingsButton" Grid.Column="1" Width="100" Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    Click="TransferRatingsButton_OnClick" Content="Transfer"/>
        </Grid>
    </StackPanel>
</UserControl>
