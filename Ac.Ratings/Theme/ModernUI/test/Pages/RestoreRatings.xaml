<UserControl x:Class="Ac.Ratings.Theme.ModernUI.test.Pages.RestoreRatings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ac.Ratings.Theme.ModernUI.test.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="5">
        <Grid Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontSize="16" Text="Restore ratings from backup file" />
            <Button x:Name="RestoreBackupButton" Grid.Column="1" Width="100" Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    Click="RestoreBackupButton_Click" Content="Restore" />
        </Grid>
    </StackPanel>
</UserControl>
